% Publication list
\newcommand{\pubListStart}{\begin{enumerate}[left=0pt, itemsep=1pt, topsep=0pt, parsep=0pt]}
\newcommand{\pubListEnd}{\end{enumerate}\vspace{-1pt}}

% Award list
\newcommand{\awardListStart}{\begin{itemize}[leftmargin=*, label={}, itemsep=0pt, topsep=0pt, parsep=0pt]}
